<%include header%>

<div class="mx-auto" style="width: 250px;">
	<body class="text-center">
		<img src="http://i68.tinypic.com/30kc7r5.png" border="0">
		<h1 class="h3 mb-3 font-weight-normal">Register</h1>
		<form class="form-register">

<!--	<label for="input-email" class="sr-only">Email</label>
	<input type="text" id="input-email" class="form-control" placeholder="Email" required autofocus>
-->
			<label for="username" class="sr-only">Username</label>
			<input type="text" id="username" class="form-control" placeholder="Username" required autofocus>
			<small id="usernameHelpBlock" class="form-text text-danger invisible">This username is taken!</small>

			<label for="password" class="sr-only">Password</label>
			<input type="password" id="password" class="form-control" placeholder="Password" required>
			<small id="passwordLengthHelpBlock" class="form-text text-danger invisible">Your password must be 6 characters or more!</small>

			<label for="confirm-password" class="sr-only">Confirm Password</label>
			<input type="password" id="confirm-password" class="form-control" placeholder="Confirm Password" required>
			<small id="passwordMatchHelpBlock" class="form-text text-danger invisible">Your passwords do not match!</small>

			<button id="submit" type="submit" class="btn btn-primary btn-lg" disabled>Register</button>
			<p>Already have an account? <br>Click <a href="/login">here </a>to login!</p>

		</form>
	</body>
</div>

<script type="text/javascript" src="/js/register.js"></script>
<%include footer%>
