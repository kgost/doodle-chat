<%- include header%>
	<!-- Modal -->
	<div id="new-convo-modal" class="modal fade" role="dialog">
	<div class="modal-dialog">

		<!-- Modal content-->
		<div class="modal-content">
	  	<div class="modal-header">
			<h4 class="modal-title">New Conversation</h4>
			<button type="button" class="close" data-dismiss="modal">&times;</button>
	  	</div>
	  	<div class="modal-body">
			<p>Create a new conversation:</p>
			<form class="form-horizontal" role="form">
				<!-- Conversation Title Input -->
				<div class="form-group">
				  <label class="col-sm-2 control-label" for="new-conversation-name" >Name</label>
				  <div class="col-sm-10">
					  <input type="text" class="form-control" id="new-conversation-name" placeholder="Conversation Name"/>
				  </div>
				</div>
				<div class="form-group">
					<label  class="col-sm-2 control-label" for="new-conversation-users">Users</label>
					<div class="col-sm-10">
							<input type="text" class="form-control" id="new-conversation-users" placeholder="Users (comma-separated)"/>
					</div>
				</div>
			</form>
	  	</div>
		<div class="modal-footer">
			<button id="cancel" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
			<button id="submit-conversation" type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
	  	</div>
		</div>

	</div>
	</div>


	<div id="placeholder-container-id" class="container">
	<br>
	<button id="new-convo-button" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#new-convo-modal">New Conversation</button>
	<br>
	<div id="conversation-list" class="sidenav">
	</div>
	<br>
	<div id="message-container" class="container">
		<div class="card">
			<div class="card-body">
				This is some text within a card body.
			</div>
		</div>
		<div class="card">
			<div class="card-body">
				This is a second card body.
			</div>
		</div>
	</div>
	<div class="mx-auto" style="width: 200px;">
		<form>
			<input id="text-entry-box" type="text" placeholder="Enter Your Message Here..."></input>
			<button id="send-button" type="submit" class="btn btn-primary btn-lg">Send Message</button>
	</form>
	</div>

	<script type="text/javascript" src="/js/messenger.js"></script>
<%- include footer%>
